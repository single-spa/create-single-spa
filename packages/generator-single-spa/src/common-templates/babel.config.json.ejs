{
  "presets": [
    "@babel/preset-env",<% if (framework === 'react') { %>
    [
      "@babel/preset-react", 
      {
        "runtime": "automatic"
      }
    ],<% } if (typescript) { %>
    "@babel/preset-typescript"<% } %>
  ],
  "plugins": [
    [
      "@babel/plugin-transform-runtime",
      {
        "useESModules": true,
        "regenerator": false
      }
    ]
  ],
  "env": {
    "test": {
      "presets": [
        ["@babel/preset-env", {
          "targets": "current node"
        }]
      ]
    }
  }
}
